<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gameroom">

    <TextView
        android:id="@+id/gameRoom"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="게임 방"
        android:textColor="#E65367D8"
        android:textSize="35sp"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/listenGame"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:text="청음 게임"
        android:textSize="23sp"
        android:textColor="#FF111111"
        app:layout_constraintBottom_toTopOf="@+id/randomQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameRoom"
        app:layout_constraintVertical_bias="0.53" />

    <Button
        android:id="@+id/randomQuiz"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:text="랜덤 퀴즈"
        android:textSize="23sp"
        android:textColor="#FF111111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameRoom" />

    <Button
        android:id="@+id/gameRoomBack"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#A4D5EC"
        android:text="뒤로"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomQuiz" />

</androidx.constraintlayout.widget.ConstraintLayout>